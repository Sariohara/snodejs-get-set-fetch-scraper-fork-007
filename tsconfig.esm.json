{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "strict": false,
    "moduleResolution": "node",
    "module": "es2020",
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist/esm",
    "declaration": true,
    "newLine": "LF",
    "preserveConstEnums": true,
    "useDefineForClassFields": false
  },
  
  "include": [
    "src",
    "src/**/*.json",
  ],
}
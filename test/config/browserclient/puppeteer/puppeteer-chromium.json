{
  "browser": "chromium",
  "headless": true,
  "ignoreHTTPSErrors": true,
  "slowMo": 20,
  "args": [
    "--host-rules=MAP *:80 127.0.0.1:8080, MAP *:443 127.0.0.1:8443",
    "--ignore-certificate-errors",

    "--disable-gpu",
    "--disable-dev-shm-usage",
    "--disable-setuid-sandbox",
    "--no-first-run",
    "--no-sandbox",
    "--no-zygote",
    "--single-process"
  ]
}